<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF" >
 
    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="280dp"
        android:layout_height="330dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/graph"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/graph"
            android:layout_alignStart="@+id/graph"
            android:layout_below="@+id/graph"
            android:text="Caduta: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/graph"
            android:layout_marginLeft="70sp"
            android:text="XXX"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:text="Data: " />

        <TextView
            android:id="@+id/datef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@+id/textView2"
            android:text="YYYY-MM-DD HH:MM:SS" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:text="Latitudine: " />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/lat"
            android:text="Longitudine: " />

        <TextView
            android:id="@+id/longit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="ZZ.ZZZZ" />

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/imageS"
            android:layout_alignRight="@+id/graph"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="22dp"
            android:background="#D3D3D3" />

        <ImageView
            android:id="@+id/imageS"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/view1"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/ids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageS"
            android:layout_toRightOf="@+id/textView2"
            android:text="YY"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/nameS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ids"
            android:layout_alignBottom="@+id/ids"
            android:layout_toRightOf="@+id/textView3"
            android:text="Sessione"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/idfall"
            android:text="YY.YYYY" />

    </RelativeLayout>

</RelativeLayout>