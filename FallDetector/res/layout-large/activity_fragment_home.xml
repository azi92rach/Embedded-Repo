<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation = "vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.esp1415NONE.falldetector.SessioneCorrenteFragment" >
    

       
     <RelativeLayout 
            android:id="@+id/relativeLayoutHome1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/titleSession"
        android:visibility="invisible"
        android:gravity="center"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

     <RelativeLayout
         android:id="@+id/relativeLayoutHome2"
         android:layout_width="fill_parent"
         android:layout_height="400dp"
         android:layout_alignParentBottom="true" >

         <ImageButton
             android:id="@+id/startSession"
             android:layout_width="200dp"
             android:layout_height="200dp"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:background="@drawable/play"
             android:contentDescription="@string/DescPlay"
             android:visibility="invisible" />

     <TextView
         android:id="@+id/textGps"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/startSession"
         android:layout_centerHorizontal="true"
         android:textSize="20sp"
         android:text="" />

     <TextView
         android:id="@+id/textNetwork"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/textGps"
         android:textSize="20sp"
         android:layout_alignLeft="@+id/textGps"
         android:layout_alignStart="@+id/textGps"
         android:text="" />


     </RelativeLayout>

     

</RelativeLayout>